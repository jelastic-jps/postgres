    "jps": "https://raw.githubusercontent.com/jelastic-jps/postgres/master/addons/auto-cluster.yaml",
    "defaultState": false,
    "skipOnEnvInstall": true,
    "nodeGroupData": {
        "scalingMode": "STATELESS",
